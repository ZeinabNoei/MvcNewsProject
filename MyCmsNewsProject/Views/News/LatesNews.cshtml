@model  IEnumerable<DataLayer.Page>
<section class="last-news-section border-radius margin-top-60">
    <header> <i class="icons icon-doc-2 "></i><h3>آخرین اخبار ارسالی</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/PageImages/@item.ImageName" />
                <h2>
                    <a href="/News/@item.PageID">@item.Title</a>
                    <p>
                        @item.ShortDescription
                    </p>
                    <span class="date-publish"><i class="fa fa-calendar"></i>انتشار:@item.CreateDate.ToShamsiDate()</span>
                    <a href="/News/@item.PageID" class="more-link"><i class="icons icon-more "></i></a>
                </h2>
            </li>
        }
    </ul>
</section>

